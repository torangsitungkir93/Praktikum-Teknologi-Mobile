<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DetailMovieActivity"
    android:background="#263238">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/detail_activity_ivbackdrop"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:contentDescription="Movie Backdrop"
            android:src="@drawable/background_activity"
            />

        <RelativeLayout
            android:id="@+id/layerposter"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/detail_activity_ivbackdrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:background="@drawable/layer2"
            >
            <ImageView
                android:id="@+id/detail_activity_ivposter"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:contentDescription="Movie Poster"
                android:src="@drawable/ic_movie"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layerposter"
            android:background="@drawable/layer2"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/detail_activity_tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="4dp"
                android:text="Movie Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/detail_activity_tvrated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Rate : 9.0"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_below="@+id/detail_activity_tvtitle"/>

            <View
                android:id="@+id/detail_activity_garis"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/white"
                android:layout_below="@+id/detail_activity_tvrated"
                />

            <TextView
                android:id="@+id/detail_activity_tvoverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Overview"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_below="@+id/detail_activity_garis"/>

            <TextView
                android:id="@+id/detail_activity_tvdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet."
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:layout_below="@+id/detail_activity_tvoverview"/>
        </RelativeLayout>



    </RelativeLayout>

</ScrollView>